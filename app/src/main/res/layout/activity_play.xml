<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context="com.example.mathgame.PlayActivity">

    <TextView
        android:id="@+id/timer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24sp"
        android:layout_marginStart="24sp"
        android:layout_marginTop="22sp"
        android:text="00:00"
        android:textColor="#2196F3"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/task_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170sp"
        android:textSize="40sp"
        tools:text="1 + 1" />

    <EditText
        android:id="@+id/answer_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34sp"
        android:ems="2"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/apply_answer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16sp"
        android:text="ответить"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:textStyle="italic" />

    <Button
        android:id="@+id/exit"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginEnd="11sp"
        android:layout_marginRight="11sp"
        android:background="@drawable/ic_exit_to_app_black_24dp"
        android:layout_alignBottom="@+id/timer_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/timer_textview"
        android:layout_alignBottom="@+id/timer_textview"
        android:layout_centerHorizontal="true"
        android:text="0/5"
        android:textColor="#2196F3"
        android:textSize="48sp" />

</RelativeLayout>
