<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mathgame.PlayActivity">

    <TextView
        android:id="@+id/timer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:text="00:00"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/task_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:textSize="40sp"
        tools:text="1 + 1" />

    <EditText
        android:id="@+id/answer_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:ems="2"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/apply_answer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/answer_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="ответить" />

    <Button
        android:id="@+id/exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/ic_exit_to_app_black_24dp"
        android:layout_alignBaseline="@+id/timer_textview"
        android:layout_alignBottom="@+id/timer_textview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/timer_textview"
        android:layout_alignBottom="@+id/timer_textview"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_toLeftOf="@+id/exit"
        android:layout_toStartOf="@+id/exit"
        android:text="0/5"
        android:textSize="24sp" />

</RelativeLayout>
